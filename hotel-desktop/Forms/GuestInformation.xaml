            <Button x:Name="btnEdit" Content="Перейти к редактированю" HorizontalAlignment="Center" VerticalAlignment="Top" Width="242" Height="48" Background="#FF2B2A28" FontSize="18" Foreground="#FFF1F1F1" Canvas.Left="84" Canvas.Top="288" Click="btnEdit_Click"/>
            <Label x:Name="lblGuestName" Content="Имя:"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Canvas.Left="-32" Canvas.Top="38"/>
            <Label x:Name="lblPhoned" Content="Номер телефона:" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="144" Canvas.Top="111" Canvas.Left="-36"/>
            <Label x:Name="lblPostalD" Content="Пол:"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="52" Canvas.Left="-34" Canvas.Top="185"/>
            <Label x:Name="lblAddressd" Content="Номер паспорта:"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="174" Canvas.Left="-52" Canvas.Top="148"/>
            <Label x:Name="lblGuest" Content="ID гостя:"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Canvas.Left="-32" Canvas.Top="2"/>
            <Label x:Name="lblGuestName_Copy" Content="Фамилия:"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Canvas.Left="-32" Canvas.Top="74"/>
            <Label x:Name="lblEmailD" Content="E-mail:" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="100" Canvas.Left="-50" Canvas.Top="222"/>
            <Label x:Name="lblID" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" Width="303" Height="32" BorderBrush="Black" BorderThickness="1" Canvas.Left="125" Canvas.Top="3"/>
            <Label x:Name="lblFirstName" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="303" Height="32" BorderBrush="Black" BorderThickness="1" Canvas.Left="125" Canvas.Top="40"/>
            <Label x:Name="lblLastName" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="303" Height="32" BorderBrush="Black" BorderThickness="1" Canvas.Left="125" Canvas.Top="77"/>
            <Label x:Name="lblPhone" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="303" Height="32" BorderBrush="Black" BorderThickness="1" Canvas.Left="125" Canvas.Top="114"/>
            <Label x:Name="lblAddress" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="303" Height="32" BorderBrush="Black" BorderThickness="1" Canvas.Left="125" Canvas.Top="151"/>
            <Label x:Name="lblPostal" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="303" Height="32" BorderBrush="Black" BorderThickness="1" Canvas.Left="125" Canvas.Top="188"/>
            <Label x:Name="lblEmail" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="303" Height="32" BorderBrush="Black" BorderThickness="1" Canvas.Left="125" Canvas.Top="225"/>
        </Canvas>
    </Grid>
</Window>
