        <Label x:Name="lblExistingReservationTitle" Content="Бронирование" HorizontalAlignment="Left" Margin="162,119,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" FontFamily="Times New Roman"/>
